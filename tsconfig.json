{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "outputJS",
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["*", "src", "src/**/*.json"],
  "exclude": ["node_modules"]
}
